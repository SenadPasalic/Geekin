@using Geekin.ViewModels
@model AddPostVM
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    ViewBag.Title = "Create a new post";
}


<body>
    <form asp-controller="Admin" asp-action="AddPost" method="post">
        <label asp-for="Title"></label>
        <br />
        <input asp-for="Title" placeholder="Title" style="width:300px;"/>
        <span asp-validation-for="Title"></span>
        <br /><br>
        @*@Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })*@
        @*<textarea asp-for="Text" id="mytextarea" name="mytextarea"></textarea>*@  
        @*"mytextarea" istället för "textarea" för att kanske inte asp förstår vad som menas med textarea*@     
        <textarea asp-for="mytextarea" class="tinyMCE" id="mytextarea" name="mytextarea" rows="5" cols="40"></textarea>
        <span asp-validation-for="mytextarea"></span>
        @*<label asp-for="Text"></label>
        <br />
        <input asp-for="Text" />
        <span asp-validation-for="Text"></span>*@
        <br />
        <label asp-for="Link"></label>
        <br />
        <input asp-for="Link" placeholder="YouTube link" style="width:300px;"/>
        <span asp-validation-for="Link"></span>
        @*<select asp-for="Category"></select>*@
        <br />
        <br />
        <button type="submit" value="Post" class="btn btn-success" data-dismiss="modal"><span class="fa fa-upload" aria-hidden="true"></span> Post</button>
</form>
</body>
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>

