@using Geekin.ViewModels
@model LoginVM
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

@{
    ViewBag.Title = "Login";
}

<body>
    <div asp-validation-summary="ValidationSummary.All"></div>
    <form asp-controller="Home" asp-action="Login">
        <label asp-for="UserName"></label>
        <br />
        <input asp-for="UserName" Display="Dynamic" class="form-control custom" placeholder="UserName" />
        <span asp-validation-for="UserName"></span>
        <br /><br>
        <label asp-for="Password"></label>
        <br />
        <input asp-for="Password" Display="Dynamic" class="form-control custom" placeholder="Password" />
        <span asp-validation-for="Password"></span>
        <br />
        <br />
        <input type="submit" value="Login" class="btn btn-success" data-dismiss="modal" />
    </form>
</body>
<script src="~/scripts/jquery.min.js"></script>
<script src="~/scripts/jquery.validate.min.js"></script>
<script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>